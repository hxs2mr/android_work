<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F0F5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:id="@+id/personal_seting_back_linear"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <ImageView
            android:id="@+id/personal_seting_back"
            android:layout_width="11dp"
            android:layout_height="18.8dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/personal_all_left"
            />
            </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#798DAA"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginRight="34dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text="修改密码"
            />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="invisible"
            >
            <ImageView
                android:layout_width="11dp"
                android:layout_height="18.8dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/personal_all_left"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9F0F5"
        />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
        android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:layout_gravity="center"
        android:background="#ffffff"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:drawablePadding="6dp"
        android:textColor="#798DAA"
        android:layout_marginLeft="12dp"
        android:text="验证"
        android:layout_gravity="center"
        android:gravity="center|left"

        />
        <ImageView
            android:layout_width="2dp"
            android:layout_gravity="center"
            android:layout_height="15dp"
            android:background="@mipmap/option_edit"
            />

    <EditText
        android:id="@+id/setting_password_old"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:textColorHint="#CAD8E2"
        android:gravity="center|left"
        android:maxLines="1"
        android:inputType="textPassword"
        android:background="@null"
        android:hint="输入当前密码"
        android:paddingLeft="10dp"
        />
    <ImageView
        android:id="@+id/setting_yanjin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/setting_yan"
        android:layout_gravity="center"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9F0F5"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textColor="#798DAA"
            android:textSize="18sp"
            android:drawablePadding="6dp"

            android:layout_marginLeft="12dp"
            android:text="新密码"
            android:layout_gravity="center"
            android:gravity="center|left"

            />

        <EditText
            android:id="@+id/setting_password_new1"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColorHint="#CAD8E2"
            android:gravity="center|left"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="6-15位新密码"
            android:paddingLeft="10dp"
            />
        <ImageView
            android:id="@+id/setting_yanjin_new1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setting_yan"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9F0F5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1.5"
            android:gravity="center|left"
            android:text="确认密码"
            android:textColor="#798DAA"
            android:textSize="18sp"
        />

        <EditText
            android:id="@+id/setting_password_new2"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColorHint="#CAD8E2"
            android:gravity="center|left"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="再次输入新密码"
            android:paddingLeft="10dp"
            />
        <ImageView
            android:id="@+id/setting_yanjin_new2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setting_yan"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9F0F5"
        />

    <TextView
        android:layout_marginTop="41dp"
        android:id="@+id/setting_password_quren"
        android:layout_width="262dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:paddingBottom="5dp"
        android:text="确认修改"
        android:background="@mipmap/btn_login"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9F0F5"
        />

</LinearLayout>