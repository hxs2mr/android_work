<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f4f8fc"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:id="@+id/infomationitem_back_linear"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/infomationitem_back"
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:background="@mipmap/btn_left" />
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="43dp"
        android:textColor="#38E6FF"
        android:textSize="18sp"
        android:text="系统消息中心"
        android:layout_marginRight="40dp"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:background="#ffffff"
        />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9F0F5"
        />
    <LinearLayout
        android:id="@+id/message_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#f4f8fc"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/new_serviermessage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#898EA6"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:text="暂无消息"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/message_framelayout"
        android:layout_width="match_parent"
        android:background="#FAFBFD"
        android:visibility="gone"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/infomationitem_recyclerview"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</LinearLayout>