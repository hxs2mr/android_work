<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/title_linear"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="44dp">


        <LinearLayout
            android:id="@+id/next_back_linear"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
<ImageView
    android:id="@+id/next_back"
    android:layout_width="11dp"
    android:layout_height="19dp"
    android:layout_gravity="center"
    android:background="@mipmap/btn_left"
    android:layout_marginLeft="12dp"
    />
            </LinearLayout>
        <TextView
            android:id="@+id/next_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#898EA6"
            android:textSize="18sp"
            android:layout_marginRight="43dp"
            android:text="XXX知识库"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9F0F5"
        />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"

        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/next_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@null"
        android:scrollbars="none"
        />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>