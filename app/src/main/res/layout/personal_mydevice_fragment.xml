<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/personal_mydevice_back_linear"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <ImageView
            android:id="@+id/personal_mydevice_back"
            android:layout_width="11dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:background="@mipmap/btn_left" />
</LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="我的设备"
            android:textColor="#798DAA"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9F0F5"
        />
    <microtech.hxswork.com.android_work.widget.MyScorllView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="#FAFBFD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="129dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/personal_device1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/mydevice_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#8FACC8"
                android:textSize="15sp"
                android:text="型号:米可 M-17"
                />
            <TextView
                android:id="@+id/mydevice_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8FACC8"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:text="S N:35****845"
                />

            <TextView
                android:id="@+id/mydevice_unbind"
                android:layout_width="127dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/personal_unbind_shape"
                android:text="绑定"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9F0F5"
        />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#798DAA"
    android:textSize="16sp"
    android:layout_marginLeft="14dp"
    android:layout_marginTop="20dp"
    android:text="设备使用者"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    >
    <TextView
        android:drawableLeft="@mipmap/icon_buttona"
        android:textColor="#898EA6"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:layout_marginLeft="10dp"
        android:text="物理按键A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/personal_mydevice_bindtextA"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="未绑定"
        android:textColor="#FD5EA1"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/personal_mydevice_bindA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginRight="22dp"
        android:background="@mipmap/btn_binding"

        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        >
        <TextView

            android:drawableLeft="@mipmap/icon_buttonb"
            android:textColor="#798DAA"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:text="物理按键B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/personal_mydevice_bindtextB"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="某某（自己）"
            android:textColor="#798DAA"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/personal_mydevice_bindB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="22dp"
            android:background="@mipmap/btn_edit"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        >
        <TextView

            android:drawableLeft="@mipmap/icon_buttonc"
            android:textColor="#798DAA"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            android:text="物理按键C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/personal_mydevice_bindtextC"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="某某（妈妈）"
            android:textColor="#798DAA"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/personal_mydevice_bindC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="22dp"
            android:background="@mipmap/btn_edit"
            />
    </LinearLayout>

<TextView
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:drawablePadding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="left|bottom"
    android:textColor="#8FACC8"
    android:textSize="12sp"
    android:text="为了保证数据与使用者正确对应，请严格按照以上绑定关系测试数据，平台最终依据这个对应关系显示体征数据。"
    android:drawableLeft="@mipmap/star"
    />
            </LinearLayout>
    </microtech.hxswork.com.android_work.widget.MyScorllView>
</LinearLayout>