<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <microtech.hxswork.com.android_work.widget.MyScorllView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="#FAFBFD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <com.youth.banner.Banner
                    android:id="@+id/home_head_banner"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/service_back_linear"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    >
                <ImageView
                    android:id="@+id/service_back"
                    android:layout_width="10.8dp"
                    android:layout_height="18.8dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/btn_back" />
                    </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_marginRight="24dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/service_share"
                    android:layout_width="16.8dp"
                    android:layout_height="18.8dp"
                    android:layout_marginRight="13dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/icon_share" />


            </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textColor="#425A7B"
                    android:text="婴幼儿套餐(月包)，观山湖区林城西路医院"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center|top"
                    >
                    <TextView
                        android:id="@+id/item_monkey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FD5EA1"
                        android:layout_gravity="center|top"
                        android:gravity="center|left"
                        android:textSize="30sp"
                        android:text="￥130"
                        />
                    <TextView
                        android:id="@+id/item_renshu"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#8FACC8"
                        android:textSize="14sp"
                        android:layout_gravity="center|top"
                        android:gravity="center|left"
                        android:paddingLeft="24dp"
                        android:text="2.5k人以购"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E9F0F5"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center|left"
                    >
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:background="@drawable/service_activity_shape"
                        />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#798DAA"
                    android:textSize="17sp"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:text="适用人群"
                    />

                </LinearLayout>



                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:textColor="#A8BED3"
                    android:textSize="15sp"
                    android:text="1-5婴幼儿\n未打疫苗"

                    />

            </LinearLayout>



            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#E9F0F5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#38E6FF"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="服务内容"
                            />

                        <ImageView
                            android:id="@+id/im1"
                            android:layout_width="32dp"
                            android:layout_height="4dp"
                            android:layout_gravity="center"
                            android:background="@drawable/service_acticity_shapebootm"
                            />
                        
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#798DAA"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="服务内容"
                            />

                        <ImageView
                            android:id="@+id/im2"
                            android:layout_width="32dp"
                            android:layout_height="4dp"
                            android:visibility="invisible"
                            android:layout_gravity="center"
                            android:background="@drawable/service_acticity_shapebootm"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#798DAA"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="服务内容"
                            />

                        <ImageView
                            android:id="@+id/im3"
                            android:layout_width="32dp"
                            android:layout_height="4dp"
                            android:layout_gravity="center"
                            android:visibility="invisible"
                            android:background="@drawable/service_acticity_shapebootm"
                            />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E9F0F5"
                    />

                <TextView
                    android:id="@+id/text_content"
                    android:paddingTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#8FACC8"
                    android:text="● 体检服务预约至少提前2个工作日。取消服务须提前1个工作日拨打24小时白金贵宾服务专线400-619-5599进行取消。如您未在规定时间内接受服务或取消服务，视同您已使用该服务并扣除相应服务权限。\n● 为方便体检服务，体检当日接受体检者需携带本人身份证原件。\n● 体检服务预约范围为下列推荐的医疗机构，如有变更，以农业银行最新公告为准。"
                    />

            </LinearLayout>

        </LinearLayout>

</microtech.hxswork.com.android_work.widget.MyScorllView>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#FAFBFD"
        >
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:background="@mipmap/service_love_off"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#94B7D1"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="收藏服务"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:background="#38E6FF"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="立即购买"
            />
    </LinearLayout>
    </LinearLayout>